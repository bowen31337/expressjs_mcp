{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"declaration": true,
		"outDir": "dist",
		"moduleResolution": "Bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src", "tests", "examples"]
}
