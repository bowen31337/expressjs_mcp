{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "error"
			},
			"complexity": {
				"noForEach": "error"
			},
			"style": {
				"noUnusedTemplateLiteral": "error",
				"useNodejsImportProtocol": "error"
			}
		}
	},
	"formatter": { "enabled": true },
	"organizeImports": { "enabled": true },
	"files": {
		"ignore": ["dist/**", "scripts/**"]
	},
	"overrides": [
		{
			"include": ["examples/**"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					},
					"complexity": {
						"noForEach": "off"
					}
				}
			}
		}
	]
}
